<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        xmlns:viewmodel="clr-namespace:WpfApp1.ViewModel"
        mc:Ignorable="d"
        Title="Guest home page" Height="450" Width="600"
        WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <viewmodel:MenuViewModel/>
    </Window.DataContext>

    <Grid>
        <Image Source="Images\mainGuest.png" Stretch="fill"/>
        <Button Content="←" 
         HorizontalAlignment="Left" 
         Height="191" 
         VerticalAlignment="Top" 
         Width="268" FontSize="35" 
         Cursor="Hand" 
         FontFamily="Italia Std Book" 
         Foreground="green" Margin="10,344,0,0" 
         Command="{Binding GoBackAuthCommand}" 
         RenderTransformOrigin="0.46,0.34">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border Background="FloralWhite"
 CornerRadius="30"
 BorderBrush="ForestGreen"
 BorderThickness="2" Margin="0,0,213,142" >
                        <ContentPresenter HorizontalAlignment="Center"
     VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>


        <Label Content="Floral rhapsody " 
               HorizontalAlignment="Left" 
               Margin="-3,93,0,0" 
               VerticalAlignment="Top" 
               Height="88" Width="599" 
               FontSize="55" 
               Foreground="LightCoral" 
               FontFamily="Italia Std Book" 
               RenderTransformOrigin="0.5,0.5" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" >
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleY="-0.105"/>
                    <RotateTransform/>
                    <TranslateTransform Y="-0.998"/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <Button Content="reviews" 
                    HorizontalAlignment="Left" 
                    Height="104" 
                    VerticalAlignment="Top" 
                    Width="110" 
                    FontSize="26"  
                    FontFamily="Italia Std Book" 
                    BorderBrush="White" 
                    Background="White" 
                    Foreground="ForestGreen" 
                    Margin="368,235,0,0"
                    Command="{Binding OpenReviewsCommand}"
                    Cursor="Hand">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="#FFE2EFCE"
                    CornerRadius="30"
                    BorderBrush="ForestGreen"

                    BorderThickness="3">
                        <ContentPresenter HorizontalAlignment="Center"
                                  VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Button 
                Content="catalog" 
                HorizontalAlignment="Center" 
                Height="104" 
                VerticalAlignment="Top" 
                Width="110" 
                FontSize="26" 
                FontFamily="Italia Std Book"
                Foreground="DarkOrange" 
                Margin="0,235,0,0" 
                Cursor="Hand"
                Command="{Binding OpenMenuCommand}">
            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border
                            CornerRadius="30"
                            BorderBrush="orange"

                            BorderThickness="3" Background="#FFFFEFD8">
                        <ContentPresenter HorizontalAlignment="Center"
                                VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Button Content="contacts" 
                    HorizontalAlignment="Left" 
                    Height="104" 
                    VerticalAlignment="Top" 
                    Width="110" FontSize="26" 
                    Cursor="Hand" 
                    FontFamily="Italia Std Book" 
                    Margin="107,235,0,0" 
                    Foreground="LightCoral" 
                    Command="{Binding OpenReserveCommand}">
            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border Background="#FFFFB1B4" Opacity="1"
                            CornerRadius="30"
                                BorderBrush="LightCoral"
                            

                            BorderThickness="3">
                        <ContentPresenter HorizontalAlignment="Center"
                                VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Label Content="flower shop" 
               HorizontalAlignment="Left" 
               Margin="389,153,0,0" 
               VerticalAlignment="Top" 
               FontSize="22" 
               FontFamily="SimpleRonde" 
               Foreground="DarkGreen" 
               Height="114" Width="152" 
               RenderTransformOrigin="0.5,0.5">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.796"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <Label Content ="Welcome to" FontFamily="SimpleRonde" Margin="162,100,1100,792" FontSize="80" Grid.ColumnSpan="2"/>


    </Grid>

</Window>
