<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        xmlns:viewmodel="clr-namespace:WpfApp1.ViewModel"
        mc:Ignorable="d"
        Title="Client home page" Height="1080" Width="1920">

    <Window.DataContext>
        <viewmodel:MenuViewModel/>
    </Window.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="191*"/>
            <ColumnDefinition Width="289*"/>
        </Grid.ColumnDefinitions>

        <Image Source="Images/italy1.png" Stretch="Fill" Margin="0,0,0,-3" Grid.ColumnSpan="2"/>
        <Button Content="←" 
        HorizontalAlignment="Left" 
        Height="154" 
        VerticalAlignment="Top" 
        Width="206" FontSize="100" 
        Cursor="Hand" 
        FontFamily="Italia Std Book" 
        Foreground="green" Margin="84,860,0,0" Command="{Binding GoBackMMCommand}">

            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border Background="Transparent"
                CornerRadius="30"
                BorderBrush="Red"
                BorderThickness="0" Margin="0,0,14,50">
                        <ContentPresenter HorizontalAlignment="Center"
                    VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Label Content="italian rhapsody " 
               HorizontalAlignment="Left" 
               Margin="112,207,0,0" 
               VerticalAlignment="Top" 
               Height="218" Width="1182" 
               FontSize="160" 
               Foreground="#ff161f" 
               FontFamily="Italia Std Book" 
               RenderTransformOrigin="0.5,0.5" 
               Grid.ColumnSpan="2" >
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleY="-0.105"/>
                    <RotateTransform/>
                    <TranslateTransform Y="-0.998"/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <Grid HorizontalAlignment="Left" Width="1910" Margin="10,359,0,10" Grid.ColumnSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="127*"/>
                <RowDefinition Height="29*"/>
                <RowDefinition Height="898*"/>
            </Grid.RowDefinitions>
            <Button Content="about us" 
                    HorizontalAlignment="Left" 
                    Height="446" 
                    VerticalAlignment="Center" 
                    Width="252" 
                    FontSize="52" 
                    Click="Button_Click_2" 
                    FontFamily="Italia Std Book" 
                    BorderBrush="White" 
                    Background="White" 
                    Foreground="ForestGreen" 
                    Margin="1146,0,0,0" 
                    Grid.Row="2"
                    Command="{Binding OpenAboutUsCommand}"
                    Cursor="Hand">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="#FFE2EFCE"
                    CornerRadius="30"
                    BorderBrush="ForestGreen"

                    BorderThickness="3">
                            <ContentPresenter HorizontalAlignment="Center"
                                  VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <Button 
                Content="menu" 
                HorizontalAlignment="Left" 
                Height="446" 
                VerticalAlignment="Center" 
                Width="252" 
                FontSize="52" 
                Click="Button_Click_2" 
                FontFamily="Italia Std Book" 
                BorderBrush="White" 
                Background="White" 
                Foreground="Gray"
                Grid.Row="2" 
                Margin="771,0,0,0" 
                Cursor="Hand"
                Command="{Binding OpenMenuCommand}">
                <Button.Template>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="White"
                            CornerRadius="30"
                            BorderBrush="#FFB5B5B5"

                            BorderThickness="3">
                            <ContentPresenter HorizontalAlignment="Center"
                                VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <Button Content="reserve" 
                    HorizontalAlignment="Left" 
                    Height="446" 
                    VerticalAlignment="Center" 
                    Width="252" FontSize="52" 
                    Cursor="Hand" 
                    Click="Button_Click_2" 
                    FontFamily="Italia Std Book" 
                    Margin="381,0,0,0" 
                    Foreground="Red" Grid.Row="2" 
                    Command="{Binding OpenReserveCommand}">
                <Button.Template>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="#FFFFB1B4" Opacity="1"
                            CornerRadius="30"
                                BorderBrush="Red"
                            

                            BorderThickness="3">
                            <ContentPresenter HorizontalAlignment="Center"
                                VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>
        <Label Content="restaurant" 
               HorizontalAlignment="Left" 
               Margin="395,394,0,0" 
               VerticalAlignment="Top" 
               FontSize="45" 
               FontFamily="SimpleRonde" 
               Foreground="ForestGreen" 
               Height="114" Width="287" 
               RenderTransformOrigin="0.5,0.5" 
               Grid.Column="1">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.796"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <Label Content ="Welcome to" FontFamily="SimpleRonde" Margin="162,100,1100,792" FontSize="80" Grid.ColumnSpan="2"/>


    </Grid>

</Window>
