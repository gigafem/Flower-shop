<Window x:Class="WpfApp1.ReviewsForAuthorizedUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        xmlns:viewmodel="clr-namespace:WpfApp1.ViewModel"
        mc:Ignorable="d"
        Title="Reviews"  Height="443" Width="443"
        WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <viewmodel:MenuViewModel/>
    </Window.DataContext>

    <Grid>
        <!-- Всплывающее окно для написания отзыва -->
        <Grid x:Name="WriteReviewPopup"
      Background="#AA000000"
      Visibility="Collapsed"
      Panel.ZIndex="10">

            <Border Background="White" CornerRadius="10" Padding="20"
            HorizontalAlignment="Center" VerticalAlignment="Center"
            Width="400" Height="300" >
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Кнопка закрытия -->
                    <Button Content="✖"
                    Width="30" Height="30"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Foreground="DarkRed"
                    FontWeight="Bold"
                    Click="ClosePopup_Click"/>

                    <StackPanel Grid.Row="1" Margin="0,10,0,0">
                        <TextBox x:Name="NameBox"
                         Text="My name"
                         Margin="0,0,0,10"
                         Height="30"/>

                        <TextBox x:Name="ReviewTextBox"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"
                         Height="120"
                         Text="Write a review here!..."/>

                    </StackPanel>

                    <!-- Кнопка отправки -->
                    <Button Content="Send"
                    Grid.Row="2"
                    HorizontalAlignment="Center"
                    Margin="0,10,0,0"
                    Padding="10,5"
                    Click="SendReview_Click"
                    Background="LightCoral"
                    Foreground="White"
                    FontWeight="Bold"
                    BorderBrush="Transparent"
                    Width="300"
                    Height="40"/>
                </Grid>
            </Border>
        </Grid>

        <Image Source="Images/aboutUs.png" Stretch="fill" />
        <Rectangle Fill="FloralWhite" HorizontalAlignment="Center" Height="316" Stroke="Transparent" VerticalAlignment="Center" Width="364"/>
        <Image Source="Images\mainGuest.png" Stretch="fill" Margin="-27,0,-7,0"></Image>
        <Button Content="←" 
HorizontalAlignment="Left" 
Height="191" 
VerticalAlignment="Top" 
Width="268" FontSize="35" 
Cursor="Hand" 
FontFamily="Italia Std Book" 
Foreground="green" Margin="10,344,0,0" Command="{Binding GoBackMMForAuthUserCommand}" RenderTransformOrigin="0.46,0.34">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border Background="FloralWhite"
CornerRadius="30"
BorderBrush="ForestGreen"
BorderThickness="2" Margin="0,0,213,142" >
                        <ContentPresenter HorizontalAlignment="Center"
    VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Label Content="Reviews" 
               HorizontalAlignment="Center" 
               FontSize="50" Height="86"
               VerticalAlignment="Top" 
               Width="462"
               FontFamily="Italia Std Book" 
               Margin="0,42,0,0"
               Foreground="LightCoral" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Label Content="&#xA;   You can read the reviews about us and&#xA;leave yours by clicking on the button below!"
                   HorizontalAlignment="Center" 
                   Height="56" 
                   Margin="0,97,0,0" 
                   VerticalAlignment="Top" 
                   Width="443" 
                   HorizontalContentAlignment="Center" 
                   VerticalContentAlignment="Center"
                   FontSize="12" FontFamily="Berlin Sans FB"
                   Foreground="DarkGreen"/>
        <Button Content="Write" 
        Click="OpenPopup_Click"
        HorizontalAlignment="Center" 
        Height="57" 
        VerticalAlignment="Top" 
        Width="182" 
        FontSize="26" 
        FontFamily="Italia Std Book"
        Foreground="DarkOrange" 
        Margin="0,250,0,0" 
        Cursor="Hand">
            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border
                    CornerRadius="30"
                    BorderBrush="orange"

                    BorderThickness="3" Background="#FFFFEFD8">
                        <ContentPresenter HorizontalAlignment="Center"
                        VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Button Content="Read" 
            HorizontalAlignment="Center" 
            Height="57" 
            VerticalAlignment="Top" 
            Width="182" 
            FontSize="26" 
            FontFamily="Italia Std Book"
            Foreground="DarkOrange" 
            Margin="0,176,0,0"
            Cursor="Hand">
            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border
            CornerRadius="30"
            BorderBrush="orange"

            BorderThickness="3" Background="#FFFFEFD8">
                        <ContentPresenter HorizontalAlignment="Center"
                VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
    </Grid>

</Window>
