<Window x:Class="WpfApp1.Window5"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        xmlns:viewmodel="clr-namespace:WpfApp1.ViewModel"
        mc:Ignorable="d"
        Title="Bouquets" Height="360" Width="640"
        WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <viewmodel:MenuViewModel/>
    </Window.DataContext>

    <Grid>
        <Button Content="←" 
                HorizontalAlignment="Left" 
                Height="192" 
                VerticalAlignment="Top" 
                Width="268" FontSize="35" 
                Cursor="Hand" 
                FontFamily="Italia Std Book" 
                Foreground="green" 
                Margin="10,256,0,0" 
                Command="{Binding GoBackCatalogCommand}" 
                RenderTransformOrigin="0.46,0.34">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border Background="FloralWhite"
                        CornerRadius="30"
                        BorderBrush="ForestGreen"
                        BorderThickness="2" Margin="0,0,213,142" >
                        <ContentPresenter HorizontalAlignment="Center"
                         VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
       
    </Grid>
</Window>
