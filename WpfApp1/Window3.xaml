<Window x:Class="WpfApp1.Window3"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        xmlns:viewmodel="clr-namespace:WpfApp1.ViewModel"
        Title="Staff authorization page" Height="886" Width="887">
    <Window.DataContext>
        <viewmodel:MenuViewModel/>
    </Window.DataContext>

    <Grid>
        <Image Source="Images/authorization.png" Stretch="None" />
        <Rectangle Fill="FloralWhite" HorizontalAlignment="Center" Height="534" Stroke="Transparent" VerticalAlignment="Center" Width="568"/>
        <Button Content="←" 
HorizontalAlignment="Left" 
Height="280" 
VerticalAlignment="Top" 
Width="316" FontSize="100" 
Cursor="Hand" 
FontFamily="Italia Std Book" 
Foreground="green" Margin="32,666,0,0" Command="{Binding GoBackMMCommand}" RenderTransformOrigin="0.46,0.34">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border Background="FloralWhite"
                CornerRadius="30"
                BorderBrush="ForestGreen"
                BorderThickness="2" Margin="0,0,213,142" >
                        <ContentPresenter HorizontalAlignment="Center"
               VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Label Content="Who are you?" Foreground="LightCoral" FontSize="70"
           HorizontalAlignment="Left" 
           Margin="229,193,0,0" 
           VerticalAlignment="Top" 
           RenderTransformOrigin="0.5,0.5" 
           Height="141" Width="440" FontFamily="Italia Std Book">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.295"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <Label Content ="Login:" FontFamily="SimpleRonde" Margin="0,286,0,0" FontSize="30" RenderTransformOrigin="0.479,0.869" VerticalAlignment="Top" HorizontalAlignment="Center" Height="80" Width="179">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleY="0.01"/>
                    <RotateTransform Angle="0.416"/>
                    <TranslateTransform Y="0.023" X="-0.215"/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <Label Content ="Password:" FontFamily="SimpleRonde" Margin="0,425,0,0" FontSize="30" RenderTransformOrigin="0.5,0.5" VerticalAlignment="Top" HorizontalAlignment="Center" Height="79" Width="184">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleY="0.01"/>
                    <RotateTransform Angle="0.416"/>
                    <TranslateTransform Y="0.051"/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <Button Content="log in" 
            HorizontalAlignment="Center" 
            Height="68" 
            VerticalAlignment="Top" 
            Width="150" FontSize="45" 
            Cursor="Hand" 
            FontFamily="Italia Std Book" 
            Foreground="LightCoral" Margin="0,584,0,0" Click="Button_Click" 
            Command="{Binding LogInCommand}">

            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border Background="#FFFFB1B4" Opacity="1"
                CornerRadius="30"
                BorderBrush="LightCoral"
                    

                BorderThickness="3" Margin="0,0,-8,-12">
                        <ContentPresenter HorizontalAlignment="Center"
                    VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <TextBox HorizontalAlignment="Center" Margin="0,370,0,0" 
                 TextWrapping="Wrap" Text="" 
                 VerticalAlignment="Top" Width="184" Height="40"/>
        <TextBox HorizontalAlignment="Center" Margin="0,507,0,0" 
          TextWrapping="Wrap" Text="" 
          VerticalAlignment="Top" Width="184" Height="39"/>


    </Grid>
</Window>
