<Window x:Class="WpfApp1.ViewModel.SplashWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1.ViewModel"
        mc:Ignorable="d"
        Title="SplashWindow" Height="440" Width="440"
        xmlns:wgif="http://wpfanimatedgif.codeplex.com"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False"
        Topmost="True"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Border Background="White" CornerRadius="10" Padding="20">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <Image x:Name="LoadingGIF" Width="200" Height="200" Stretch="Uniform"/>
                <TextBlock x:Name="StatusText" Text="Loading..."  Margin="0,20,0,0" FontSize="18" HorizontalAlignment="Center" FontFamily="SimpleRonde"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
